<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.FoodDeliveryManagementSystem.Presentation.Components.OrderController"
      styleClass="m-card"
      fx:id="root"
>
    <VBox prefWidth="1120">
        <padding>
            <Insets top="10" bottom="10" left="10" right="10"/>
        </padding>
        <HBox alignment="CENTER_LEFT">
            <Label style="-fx-font-size: 20" fx:id="orderId"/>
        </HBox>
        <VBox alignment="CENTER_RIGHT" fx:id="orderItems">

        </VBox>
        <HBox alignment="CENTER_RIGHT">
            <JFXButton text="Complete" styleClass="m-button-flat" onAction="#MarkAsComplete"/>
        </HBox>
    </VBox>
</Pane>
